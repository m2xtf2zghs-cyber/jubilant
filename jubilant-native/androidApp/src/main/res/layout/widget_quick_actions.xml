<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/widget_root"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/widget_bg"
  android:orientation="vertical"
  android:padding="12dp">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <ImageView
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:src="@drawable/ic_brand_mark"
      android:contentDescription="@string/widget_brand_cd" />

    <TextView
      android:id="@+id/widget_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="10dp"
      android:text="@string/app_name"
      android:textColor="#FFFFFF"
      android:textStyle="bold"
      android:textSize="14sp" />
  </LinearLayout>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:text="@string/widget_quick_actions_subtitle"
    android:textColor="#9CA3AF"
    android:textSize="12sp" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:weightSum="2">

      <TextView
        android:id="@+id/action_new_lead"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_weight="1"
        android:layout_marginEnd="8dp"
        android:background="@drawable/widget_action_bg"
        android:gravity="center"
        android:text="@string/widget_action_new_lead"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="12sp" />

      <TextView
        android:id="@+id/action_my_day"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_weight="1"
        android:background="@drawable/widget_action_bg"
        android:gravity="center"
        android:text="@string/widget_action_my_day"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:orientation="horizontal"
      android:weightSum="2">

      <TextView
        android:id="@+id/action_eod"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_weight="1"
        android:layout_marginEnd="8dp"
        android:background="@drawable/widget_action_bg"
        android:gravity="center"
        android:text="@string/widget_action_eod"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="12sp" />

      <TextView
        android:id="@+id/action_scan_doc"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_weight="1"
        android:background="@drawable/widget_action_bg"
        android:gravity="center"
        android:text="@string/widget_action_scan_doc"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="12sp" />
    </LinearLayout>
  </LinearLayout>
</LinearLayout>
